<Window x:Class="WPF_JSON_Rick_and_Morty.Rick_and_Morty_Image_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_JSON_Rick_and_Morty"
        mc:Ignorable="d"
        Title="Rick_and_Morty_Image_Window" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="https://static.onecms.io/wp-content/uploads/sites/6/2019/11/rick-and-morty-season-4-2000.jpg"/>
        </Grid.Background>
        <Image x:Name="imgCharacter" HorizontalAlignment="Left" Height="209" Margin="75,67,0,0" VerticalAlignment="Top" Width="243"/>
        <TextBlock x:Name="txbCharacter" HorizontalAlignment="Left" Margin="363,28,0,0" Text="CharacterName" TextWrapping="Wrap" VerticalAlignment="Top" Height="189" Width="408" FontFamily="Bell MT" FontSize="55" FontWeight="Bold" Foreground="White">
            <TextBlock.Effect>
                <DropShadowEffect/>
            </TextBlock.Effect>
        </TextBlock>

    </Grid>
</Window>
